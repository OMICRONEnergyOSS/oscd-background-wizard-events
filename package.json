{
  "name": "@omicronenergy/oscd-background-wizard-events",
  "version": "0.0.1",
  "description": "OpenSCD background Plugin for supporting Edit V1 events (oscd-edit). This provides backward compatibility for plugins still relying on Edit V1 events in OpenSCD.",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OMICRONEnergyOSS/oscd-background-wizard-events.git"
  },
  "bugs": {
    "url": "https://github.com/OMICRONEnergyOSS/oscd-background-wizard-events/issues"
  },
  "homepage": "https://openscd.org",
  "keywords": [
    "OpenSCD",
    "iec81650"
  ],
  "author": "OMICRON Electronics GmbH",
  "license": "Apache-2.0",
  "exports": {
    ".": "./dist/foundation.js",
    "./oscd-background-wizard-events.js": "./dist/oscd-background-wizard-events.js"
  },
  "files": [
    "/dist/",
    "!/dist/*.spec.*",
    "!/dist/*.test.*"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "analyze": "cem analyze --litelement --exclude demo/* --exclude dist/* --exclude *.spec.ts --exclude *.test.ts --exclude coverage/*",
    "copy-demo": "cp -r ./demo ./dist/",
    "start": "npm run build && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds --node-resolve --watch\"",
    "start:bundle": "npm run bundle && concurrently -k -r \"rollup -c rollup.config.js --watch\" \"wds --watch \"",
    "build": "rimraf dist && mkdir dist && npm run copy-demo && npm run analyze -- --exclude dist && tsc ",
    "bundle": "rimraf dist && rollup -c rollup.config.js",
    "test": "npm run build && wtr --coverage",
    "test:watch": "npm run build && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "deploy": "npm run bundle && gh-pages --dist 'dist'",
    "prepare": "husky"
  },
  "dependencies": {
    "@omicronenergy/oscd-api": "^0.1.3",
    "@omicronenergy/oscd-background-editv1": "^0.0.6",
    "@omicronenergy/oscd-editor": "^1.7.1",
    "@omicronenergy/oscd-menu-open": "^0.0.6",
    "@omicronenergy/oscd-menu-save": "^0.0.2",
    "@omicronenergy/oscd-scl-dialogs": "^0.0.10",
    "@omicronenergy/oscd-shell": "^0.0.11",
    "@open-wc/scoped-elements": "^3.0.6",
    "@webcomponents/scoped-custom-element-registry": "^0.0.10",
    "ace-custom-element": "^1.6.5",
    "lit": "^3.3.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.31.0",
    "@open-wc/eslint-config": "^13.0.0",
    "@open-wc/testing": "4.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-polyfill": "^1.0.6",
    "@web/rollup-plugin-html": "^3.1.0",
    "@web/rollup-plugin-import-meta-assets": "^2.3.2",
    "@web/test-runner": "0.20.2",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "0.11.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.4",
    "eslint-plugin-lit": "^2.2.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-wc": "^3.1.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "rollup": "^4.57.1",
    "rollup-plugin-copy": "^3.5.0",
    "sinon": "^21.0.1",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@web/test-runner-playwright": {
      "playwright": "1.54.1"
    }
  },
  "customElements": "custom-elements.json",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "eslint"
    ]
  }
}
